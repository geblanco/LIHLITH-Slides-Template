\usepackage{tikz}
\usepackage{pdfrender}
\usepackage{helvet}

\usetikzlibrary{shapes,arrows}


% les polices des éléments de la page de titre
\setbeamerfont{author}{size=\normalsize}
\setbeamerfont{institute}{size=\footnotesize\itshape}
\setbeamerfont{title}{size=\bf\fontsize{24}{32}}%\bfseries}
\setbeamerfont{subtitle}{size=\bf\large\normalfont\slshape}

\mode<presentation> % mode pour les présentations

\useinnertheme[shadow=true]{lihlith} 
\useoutertheme{lihlith}
\usecolortheme{lihlith}

\setbeamercolor{titlelike}{bg=white} 

% marges gauche et droite du contenu des slides
\setbeamersize{sidebar width left=0.03\paperwidth}
\setbeamersize{sidebar width right=0.03\paperwidth}


\logo{}% pour supprimer le logo de toutes les pages (mis autre part que la position par défaut)

